{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "wacamoclima-app",
    "version": "1.1.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": false,
        "scope": [
          "http://dataservice.accuweather.com/*", 
          "https://api.open-meteo.com/*",
          "https://flagsapi.com/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Weather",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.msierraltav.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/msierraltav/waca-morning/releases/download/app-v{{current_version}}/wacamoclima-app_{{current_version}}_x64-setup.exe"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDQjM0ODIzRUUzNTc4QwpSV1NNVitNK2dqVExBbzJzbTE4TU9VUlRTTWxRNU9FV2NRV3hzS3NPZjgzQVp2RmIwbnNFKzgzYgo=",
      "windows": {
        "installMode": "basicUi",
        "installerArgs": []
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 810,
        "resizable": true,
        "title": "Wacamoclima desktop app",
        "width": 1440
      }
    ]
  }
}
